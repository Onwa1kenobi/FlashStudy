<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.daftneeks.julius.flashstudy.AddEditClassFragment"
    android:paddingBottom="16dp">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="right|bottom">

        <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:id="@+id/classEditText"
            android:layout_gravity="center"
            android:hint="@string/class_hint"
            android:gravity="center"
            android:maxLength="50"
            android:maxLines="1"
            android:inputType="textCapWords"
            android:layout_marginTop="157dp"
            style="@style/EditText"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <Button
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="@string/save_class_button"
            android:id="@+id/classSaveButton"
            android:textColor="#251227"
            android:layout_gravity="center_horizontal|bottom"
            android:background="@drawable/button_background"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

</FrameLayout>
